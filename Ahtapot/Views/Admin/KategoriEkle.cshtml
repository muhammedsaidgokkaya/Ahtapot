
@{
    ViewData["Title"] = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="body">
	<div>
		<section role="main" class="content-body content-body-modern mt-0">
			<div class="row">
				<div class="col">
					<section class="card card-modern card-big-info">
						<div class="card-body">
							<div class="row">
								@await Component.InvokeAsync("KategoriListele")
							</div>
						</div>

					</section>
				</div>
			</div>
			<form class="ecommerce-form action-buttons-fixed" action="#" method="post" enctype="multipart/form-data">
				<div class="gizgos" style="display:none;">
					<div class="row">
						<div class="col">
							<section class="card card-modern card-big-info">
								<div class="card-body">
									<div class="row">
										<div>
											<div class="form-group row align-items-center mb-3">
												<label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Kategori Numarası</label>
												<div class="col-lg-7 col-xl-6">
													<input type="text" class="form-control form-control-modern" name="Baslik" value="" required>
												</div>
											</div>
										</div>
										<div>
											<div class="form-group row align-items-center mb-3">
												<label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Kategori İsmi</label>
												<div class="col-lg-7 col-xl-6">
													<input type="text" class="form-control form-control-modern" name="Baslik" value="" required>
												</div>
											</div>
										</div>
									</div>
								</div>
							</section>
						</div>
					</div>
				</div>
			</form>
		</section>
	</div>
</section>

<script>
	$(document).ready(function () {
		$("#hideshow").click(function () {
			$(".gizgos").slideToggle("slow")
		});
	});
</script>