@using Ahtapot.Models
@model List<WikiHome>

@{
    ViewData["Title"] = "Home Page";
}

<div role="main" class="main shop pt-4">

	<div class="container">

		<div class="row">
			<div class="col-md-5 mb-5 mb-md-0 pt-5">

				<div class="thumb-gallery-wrapper">
					<div class="thumb-gallery-detail owl-carousel owl-theme manual nav-inside nav-style-1 nav-dark mb-3">
						
						<div>
							<img alt="" class="img-fluid" src="~/img/a.jpg" data-zoom-image="~/img/a.jpg">
						</div>
						<div>
							<img alt="" class="img-fluid" src="~/img/aa.jpeg" data-zoom-image="~/img/aa.jpeg">
						</div>
						<div>
							<img alt="" class="img-fluid" src="~/img/aa.jpg" data-zoom-image="~/img/aa.jpg">
						</div>
						<div>
							<img alt="" class="img-fluid" src="~/img/aaa.jpg" data-zoom-image="~/img/aaa.jpg">
						</div>
						<div>
							<img alt="" class="img-fluid" src="~/img/aaa.jpeg" data-zoom-image="~/img/aaa.jpeg">
						</div>
						
					</div>
					<div class="thumb-gallery-thumbs owl-carousel owl-theme manual thumb-gallery-thumbs">

						<div class="cur-pointer">
							<img alt="" class="img-fluid" src="~/img/a.jpg">
						</div>
						<div class="cur-pointer">
							<img alt="" class="img-fluid" src="~/img/aa.jpeg">
						</div>
						<div class="cur-pointer">
							<img alt="" class="img-fluid" src="~/img/aa.jpg">
						</div>
						<div class="cur-pointer">
							<img alt="" class="img-fluid" src="~/img/aaa.jpg">
						</div>
						<div class="cur-pointer">
							<img alt="" class="img-fluid" src="~/img/aaa.jpeg">
						</div>

					</div>
				</div>

			</div>

			<div class="col-md-7">

				<div id="description" class="tabs tabs-simple tabs-simple-full-width-line tabs-product tabs-dark mb-2">
					<ul class="nav nav-tabs justify-content-start">
						<li class="nav-item"><a class="nav-link active font-weight-bold text-3 text-uppercase py-2 px-3" href="#productDescription" data-bs-toggle="tab">@ViewBag.Name</a></li>
					</ul>
					<div class="tab-content p-0">
						<div class="tab-pane px-0 py-3 active" id="productDescription">
							<p>@Html.Raw(@ViewBag.Description) </p>
						</div>
					</div>
				</div>

			</div>
		</div>

		<div class="row">
			
		</div>
	</div>

</div>
