@using Ahtapot.Models
@model List<Iletisim>

@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" class="main" style="background-color:#fff">
    <section class="page-header page-header-modern bg-color-light-scale-1 page-header-md ">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <div class="row">
                        <div class="col-md-12 align-self-center p-static order-2 text-center">
                            <div class="overflow-hidden pb-2">
                                <img alt="Porto" width="200" height="60" data-sticky-width="110" data-sticky-height="40" data-sticky-top="95" src="~/StaticFiles/General/img/123.png">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container pt-3 pb-5" style="margin-right: 90px;">
        <div class="row pt-3 pb-5">
            <div class="row pt-3 pb-5">
                <div class="col-sm">
                    <h4 class="pt-5" style="color: #0088cc">Genel <strong style="color: #0088cc">Müdürlük</strong></h4>
                    <ul class="list list-icons list-icons-style-3 mt-2">
                        <li>
                            <i class="fas fa-map-marker-alt top-6"></i><strong>Adres: </strong>@ViewBag.Address
                        </li>
                        <li><i class="fas fa-phone top-6"></i> <strong>Telefon: </strong>@ViewBag.Number</li>
                        <li><i class="fas fa-envelope top-6"></i> <strong>Email: </strong><a href="mailto:@ViewBag.Mail">@ViewBag.Mail</a></li>
                    </ul>
                </div>
                <div class="col-sm">
                    <h4 class="pt-5" style="color: #0088cc">Firma <strong style="color: #0088cc">İletişim</strong></h4>
                    <ul class="list list-icons list-icons-style-3 mt-2">
                        <li><i class="fas fa-phone top-6"></i> <strong>Telefon: </strong><a href="tel:@ViewBag.Number">@ViewBag.Number</a></li>
                        <li><i class="fas fa-envelope top-6"></i> <strong>Faks: </strong>@ViewBag.Faks</li>
                        <li><i class="fas fa-envelope top-6"></i> <strong>Email: </strong><a href="mailto:@ViewBag.Mail">@ViewBag.Mail</a></li>
                    </ul>
                </div>
                <div class="col-sm">
                    <h4 class="pt-5" style="color: #0088cc">Çalışma <strong style="color: #0088cc">Saatleri</strong></h4>
                    <ul class="list list-icons list-dark mt-2">
                        <li><i class="far fa-clock top-6"></i>@ViewBag.Saatler</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>